    block header
  body(role="document")
    div(style="background: rgba(0,0,0,0.1);  width: 100%; height: 100%; position: fixed; z-index: 999999; display: none" id="hk-loading")
      div(style="margin: 200px auto; width: 400px;  padding: 40px; text-align: center; ") Loading....
    div(class="hk-error-bound")
      div(class="hk-errors" hk-error-phone-number="phone-invalid" hk-error-required="not-empty" hk-error-number="only-number" hk-error-hidden-required="need-to-check" hk-error-email="email-invalid" hk-error-select-required="not-select" hk-error-img-required="not-have-image" hk-error-confirm-required="confirm-invalid")
        div(class="e-title") #{__("warning")}
          ul
      div(class="hk-success")
        ul
    div(class="container", role="main")
        block content
    footer
      div(class="container",role="footer")
        div(class="extra")
          div(class="hk-center")
            a(href=global.config.template.user_policy target="blank") #{__('policy')}
            br
            br
            a(href="/user-terms",target="_blank") #{__('terms')}
            a(href=global.config.mail_config.mailto, target="blank") #{__('mailto')}
          br
          div(class="hk-center") #{__('copyright')}
