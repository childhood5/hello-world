extends ../layout
block header
  script(type='text/javascript', src='/content/js/service_request_completion_controller.js')

block content
  div(class="page-header")
    img(src="/content/css/imgs/logo.png")
  div
    form(action="/confirm-payment", method="get")
      div(class="hk-bg box-completion black")
        p( class="hk-ex130 hk-bold")
          h3 Error: #{ status }
          br
        p
          p #{ errMessage }
          br
        p Click here to check your card info.
        p 
          a.btn.btn-info(href="/card-register") Card Info
        p OR
        p 
          a.btn.btn-default(href="/") Cancel
      &nbsp;

block footer
